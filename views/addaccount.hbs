					</div>

					<form id="addUser">
						<div class="form-row">
							<div class="col-md-6">
								<div class="form-group">
									<label class="small mb-1" for="usertype">Account Type </label> <span style="color=red"> * </span>
									<select class="form-control" name="usertype">
										<option value="0"> Select account type </option>
										<option value="Secretary"> Secretary </option>
										<option value="Sales"> Sales </option>
									</select>
								</div>
							</div>
						</div>
						<div class="form-row">
							<div class="col-md-6">
								<div class="form-group">
									<label class="small mb-1" for="firstname">First Name</label> <span style="color: red"> * </span>
									<input class="form-control py-4" name="firstname" type="text" placeholder="Enter first name" required/>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label class="small mb-1" for="lastname">Last Name</label> <span style="color: red"> * </span>
									<input class="form-control py-4" name="lastname" type="text" placeholder="Enter last name" required/>
								</div>
							</div>
						</div>
						<div class="form-group">
							<label class="small mb-1" for="username">Username</label> <span style="color: red"> * </span>
							<input class="form-control py-4" name="username" type="text" placeholder="Enter username" required/>
						</div>
						<div class="form-row">
							<div class="col-md-6">
								<div class="form-group">
									<label class="small mb-1" for="password">Password</label> <span class="small mb-1"> (min. of 8 characters) </span> <span style="color: red"> * </span>
