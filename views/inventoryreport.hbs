<div class="sb-nav-fixed">
	<div id="layoutSidenav">
		<div id="layoutSidenav_content">
        <main>
            <div class="container-fluid" style="padding: 0.75rem;">
                <h1 class="mt-4" style="padding:0px 20px">Inventory Report</h1>

                <div class="card mb-4">
                    <div class="card-header" style="display: inline-flex; vertical-align: middle; align-items: center; sep" >
                        
                        <div style="width: 50%; vertical-align: middle; ">
                            <i class="fas fa-table mr-1"></i>
                            
                            <!-- select month -->
                            <label> For the Month of:
                                <select id="fsMonth">
                                    <option value="1">Jan</option>
                                    <option value="2">Feb</option>
                                    <option value="3">Mar</option>
                                    <option value="4">Apr</option>
                                    <option value="5">May</option>
                                    <option value="6">Jun</option>
                                    <option value="7">Jul</option>
                                    <option value="8">Aug</option>
                                    <option value="9">Sep</option>
                                    <option value="10">Oct</option>
                                    <option value="11">Nov</option>
                                    <option value="12">Dec</option>
                                </select>
                            </label>

                            <!-- select year -->
                            <label>Year: 
                                <select id="fsYear">
                                    <option value="2020">2021</option>
                                    <option value="2020">2020</option>
                                    <option value="2019">2019</option>
                                    <option value="2018">2018</option>
                                </select>
                            </label> 
                        </div>

                        <div style="width:40%; justify-content:end; align-content:end; text-align:right;display: flex;">
                            <div style="margin: 0px 5px;">
                                <button type="button" data-toggle="dropdown">Product Group
                                <span class="caret"></span></button>
                                <ul class="dropdown-menu" id="groupnum" value="0">
                                <input class="form-control" id="myInput" type="text" placeholder="Search..">
                                    <li onclick="group('-1')"> ALL</li>
                                    
                                </ul>
                            </div>
                            <button type="button" onclick="exportTableToCSV('report.csv')" style="margin: 0px 5px;">  CSV </button>
                            <button type="button" onclick="printDiv('print')" style="margin: 0px 5px;">  PDF </button>
                        </div>

                    </div>
                    <div class="card-body">
                        <div class="table-responsive" id='print'>
                            <table class="table table-bordered" id="report" width="100%" cellspacing="0">
                                <thead style="background-color: rgba(0, 0, 0, 0.03);">
                                    <tr style="font-size:12">
                                        <th style="width: 20%;">Code</th>
                                        <th style="width: 25%;">Product Name</th>
                                        <th style="width: 10%;">Beginning Inv.</th>
                                        <th style="width: 5%;">Purchases</th>
                                        <th style="width: 5%;">Sales</th>
                                        <th style="width: 5%;">Adjust</th>
                                        <th style="width: 10%;">Ending Inv.</th>
                                        <th style="width: 10%;">COGS</th>
                                        <th style="width: 10%;">Inv. Turnover</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Code</th>
                                        <th>Product Name</th>
                                        <th>Beginning Inventory</th>
                                        <th>Purchases</th>
                                        <th>Sales</th>
                                        <th>Adjustment</th>
                                        <th>Ending Inventory</th>
                                        <th>COGS</th>
                                        <th>Inventory Turnover</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    {{#each products}}
                                    <tr id="row" class="{{{getGroupCode this.itemCode}}}">
                                        <td>{{this.itemCode}}</td>
                                        <td>{{this.prodName}}</td>
                                        <td>{{begInv this}}</td>
                                        <td>{{sumPurch this}}</td>
                                        <td>{{sumSales this}}</td>
                                        <td>{{sumAdj this}}</td>
                                        <td>{{this.quantity}}</td>
                                        <td>{{cogs this}}</td>
                                        <td>{{invTurnover this}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        </div>
    </div>
</div>
