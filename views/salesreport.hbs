<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid" style="padding: .75rem">
            <h1 class="mt-4" style="padding:0px 20px; margin-bottom: 20px;">Sales Comparative Report</h1>

            <div class="card mb-4">
                <div class="card-header" style="display: inline-flex; vertical-align: middle; align-items: center;" >
                    <div style="width: 100%; vertical-align: middle; margin-right: 5px; display: flex; align-items: center; flex-wrap: wrap;">
                        <i class="fas fa-table" style="margin-top: -10px; margin-right: 10px;"></i>
                        <div style="justify-content: space-between; display: flex;">
                            Net Sales between the Month of&nbsp;<b> *last month* 2021 </b>&nbsp;and&nbsp;
                            <!-- select month -->
                            <label> the Month of:
                                <select id="fsMonth">
                                    <option value="1">Jan</option>
                                    <option value="2">Feb</option>
                                    <option value="3">Mar</option>
                                    <option value="4">Apr</option>
                                    <option value="5">May</option>
                                    <option value="6">Jun</option>
                                    <option value="7">Jul</option>
                                    <option value="8">Aug</option>
                                    <option value="9">Sep</option>
                                    <option value="10">Oct</option>
                                    <option value="11">Nov</option>
                                    <option value="12">Dec</option>
                                </select>
                            </label>
                            &nbsp;
                            <!-- select year -->
                            <label>Year: 
                                <select id="fsYear">
                                    <option value="2020">2021</option>
                                    <option value="2020">2020</option>
                                    <option value="2019">2019</option>
                                    <option value="2018">2018</option>
                                </select>
                            </label>
                        </div> 
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead style="background-color: rgba(0, 0, 0, 0.03); text-align: center; justify-content: center;">
                                <tr>
                                    <th rowspan="2" style="border-right-width: 1px; border-left-width: 1px;vertical-align: middle;">Code</th>
                                    <th rowspan="2" style="border-right-width: 1px; border-left-width: 1px;vertical-align: middle;">Product Name</th>
                                    <th colspan="2" style="border-right-width: 1px; border-left-width: 1px;vertical-align: middle;"> NET SALES (Php) </th>
                                    <th rowspan="2" style="border-right-width: 1px; border-left-width: 1px;vertical-align: middle;">Change %</th>
                                </tr>
                                <tr>
                                    <th style="border-right-width: 1px; border-left-width: 1px;">MONTH YEAR</th>
                                    <th style="border-right-width: 1px; border-left-width: 1px;">MONTH YEAR</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <td>Code</td>
                                    <td>Product Name</td>
                                    <td>MONTH YEAR</td>
                                    <td>MONTH YEAR</td>
                                    <td>Change %</td>
                                </tr>
                            </tfoot>
                            <tbody>
                                {{#each product}}
                                <tr>
                                    <td>{{this.itemCode}}</td>
                                    <td>{{this.prodName</td>
                                    <td>10</td>
                                    <td>20</td>
                                    <td style="color: green;">+30%</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>