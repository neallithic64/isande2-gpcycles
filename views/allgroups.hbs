<div class="sb-nav-fixed">
	<div id="layoutSidenav">
		<div id="layoutSidenav_content">
			<main>
				<div class="container-fluid" style="padding: 0.75rem;">
					<h1 class="mt-4" style="padding:0px 20px">Inventory</h1>

					<ol class="breadcrumb" style="margin:-10px 20px; margin-bottom: 20px; padding: 0px; background-color: transparent;">
						<li class="breadcrumb-item active">View Group</li>
						<li class="breadcrumb-item"><a href="allproducts">View Items</a></li>
					</ol>

					<div class="card mb-4">
						<div class="card-header" style="display: inline-flex; vertical-align: middle; align-items: center;" >
							<div style="width: 50%; vertical-align: middle; ">
								<i class="fas fa-table mr-1"></i>
								Product Groups
							</div>
						</div>
						<div class="card-body">
							<div class="table-responsive">
								<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
									<thead style="background-color: rgba(0, 0, 0, 0.03);">
										<tr>
											<th style="width: 50%;">Group</th>
											<th style="width: 25%;">Variety of Items</th>
											<th style="width: 25%;">Total Quantity</th>
										</tr>
									</thead>
									<tfoot>
										<tr>
											<td>Group</td>
											<td>Variety of Items</td>
											<td>Total Quantity</td>
										</tr>
									</tfoot>
									<tbody>
										{{#each groups}}
										<tr>
											<td style="display: flex;">
												<a href="/allgroupproducts/{{{this.Index}}}" style="width: 85%;">{{this.Name}}</a>
												{{#if this.IsLow}}
												<div style='background-color: #F50506;  color: white; padding: .5px; text-align: center; width: 20px; height: 20px; border-radius: 50%;'>
													{{this.LowQty}}
												</div>
												{{/if}}
											</td>
											<td>{{this.Items}}</td>
											<td>{{this.Qty}}</td>
										</tr>
									{{/each}}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</main>
		</div>
	</div>
</div>
